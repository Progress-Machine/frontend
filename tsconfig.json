{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./*"],
	  "@components/*": ["./components/*"],
	  "@shared/*": ["./shared/*"],
	  "@modals/*": ["./modals/*"],
	  "@styles/*": ["./styles/*"],
	  "@layouts/*": ["./layouts/*"],
	  "@assets/*": ["./assets/*"],
	  "@hooks/*": ["./hooks/*"]
    }
  },
  "include": ["next-env.d.ts", "images.d.ts", "**/*.ts", "**/*.tsx", "styles/pages/MainPage.style.tss"],
  "exclude": ["node_modules"]
}
